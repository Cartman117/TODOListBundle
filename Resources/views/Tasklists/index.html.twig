<h1>TaskLists</h1>
<a href="{{ path("todolist_new_tasklists") }}">New tasklist</a>
{% if taskLists not empty %}
    <ul>
        {% for taskList in taskLists %}
            <li>
                <form name="form" action="{{ path("todolist_delete_tasklists") }}" method="post">
                    <input type="hidden" name="id" value="{{ taskList.id }}"/>
                    <input type="submit" value="Delete" name="delete"/>
                </form>
                <a href="{{ path("todolist_update_tasklists", { "idTaskList" : taskList.id}) }}">Update</a>&nbsp;&nbsp;|&nbsp;&nbsp;
                <a href="{{ path("todolist_list_tasks", { "idTaskList" : taskList.id}) }}">Tasks</a>&nbsp;&nbsp;|&nbsp;&nbsp;
                {{ taskList.title }}
            </li>
        {% endfor %}
    </ul>
{% endif %}