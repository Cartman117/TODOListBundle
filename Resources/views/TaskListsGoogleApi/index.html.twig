{% extends 'TODOListBundle:Base:tasklistGoogleApi.base.html.twig' %}

{% block content %}
    <label for="message"><h3><span class="label label-default label-purple">Manage your TaskLists</span></h3></label><br/>

    {% if taskLists.data|length > 0 %}
        {% for taskList in taskLists %}
            <div class="panel panel-default panel-tweet">
                <div class="panel-heading">
                    {{ taskList.title }}
                </div>
            </div>
            <div class="panel panel-default panel-tweet-more">
                <div class="panel-body">
                    <a class="btn btn-default" href="{{ path("todolist_googleapi_update_tasklists", { "idTaskList" : taskList.id}) }}">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a class="btn btn-default" href="{{ path("todolist_googleapi_list_tasks", { "idTaskList" : taskList.id}) }}">
                        <span class="glyphicon glyphicon-zoom-in"></span>
                    </a>
                    <form name="form" action="{{ path("todolist_googleapi_delete_tasklists") }}" method="post">
                        <input type="hidden" name="id" value="{{ taskList.id }}"/>
                        <button type="submit" value="Delete" name="delete" class="btn btn-default">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </form>
                </div>
            </div>
            <br/>
        {% endfor %}
    {% endif %}
{% endblock %}